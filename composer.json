{
  "version": "1.0",
  "name": "composer-wordpress",
  "description": "Project power by wordpress",
  "authors": [
    {
      "name": "Gia Hoang Nguyen",
      "email": "dev.hoanggia@gmail.com",
      "role": "Developer"
    }
  ],
  "repositories": [
    {
      "type":"composer",
      "url":"http://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=5.4",
    "vlucas/phpdotenv": "^2.2",
    "johnpbloch/wordpress": "4.7",
    "wpackagist-plugin/query-monitor": "2.13.2",
    "wpackagist-plugin/debug-bar": "0.8.4",
    "wpackagist-plugin/wp-smushit": "2.3.1",
    "wpackagist-plugin/wp-super-cache": "1.4.8",
    "wpackagist-plugin/all-in-one-wp-security-and-firewall": "4.1.0",
    "wpackagist-plugin/wp-mail-smtp": "0.9.6",
    "wpackagist-plugin/contact-form-7": "4.4.2"
  },
  "extra": {
    "installer-paths": {
      "wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
      "wp-content/themes/{$name}/": ["type:wordpress-theme"]
    }
  },
  "config": {
    "secure-http": false
  }
}